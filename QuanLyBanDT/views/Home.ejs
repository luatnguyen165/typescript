<%-  include Header.ejs %>

    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="../images/iPhone-manufacturing-in-the-US.jpeg" alt="Los Angeles">
            </div>

            <div class="item">
                <img src="../images/iPhone-manufacturing-in-the-US.jpeg" alt="Los Angeles">
            </div>

            <div class="item">
                <img src="../images/iPhone-manufacturing-in-the-US.jpeg" alt="Los Angeles">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>

    </div>
    <div class="container-fluid mt-10">
        <div class="row">

            <div class="alert alert-success  text-center" role="alert">
                <a href="#" class="alert-link ">Danh Sách Sản Phẩm</a>
            </div>
            <% ProductList.forEach(function(item){%>
                <div class="col-md-4 product-item">
                    <div class="card">
                        <div class="card-body">
                            <img src=uploads/<%= item.image %> alt="">
                            <h3 class="card-title"><%=item.name %></h3>
                            <p class="card-text">Gía: <%= item.price%>đ</p>
                            <a href="/san-pham/<%=item._id%>" class="btn btn-primary"> Xem Chi Tiết</a>
                            <a href="/addToCart/<%= item._id%>" class="btn btn-success"><i class="fas fa-cart-plus"></i> Thêm vào giỏ</a>
                        </div>
                    </div>
                </div>
            <%})%>
            
        </div>
    </div>
  <%- include Footer.ejs %>